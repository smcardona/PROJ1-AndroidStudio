<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado deshabilitado -->
    <item android:state_enabled="false" android:drawable="@color/spinner_disabled">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Fondo gris -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
            <stroke android:width="1dp" android:color="#888888" /> <!-- Borde -->
        </shape>
    </item>    <!-- Estado habilitado -->
    <item android:state_enabled="true" android:drawable="@color/spinner_enabled" />
</selector>
